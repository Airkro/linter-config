{
  "private": true,
  "name": "nice-move",
  "version": "0.0.0",
  "description": "Eslint/Stylelint/Prettier config for personal use",
  "license": "UNLICENSED",
  "files": [],
  "scripts": {
    "format": "nice-move",
    "inspect": "best-shot inspect",
    "start": "nodemon --config .best-shot/nodemon.json",
    "test": "ava --verbose"
  },
  "workspaces": [
    "packages/*",
    "loader"
  ],
  "dependencies": {
    "core-js": "~3.4.5",
    "react": "~16.12.0",
    "react-diff-viewer": "~2.0.6",
    "react-dom": "~16.12.0",
    "react-hot-loader": "~4.12.18",
    "react-router": "~5.1.2",
    "react-select": "~3.0.8"
  },
  "devDependencies": {
    "@babel/core": "^7.7.4",
    "@best-shot/cli": "^0.1.2",
    "@best-shot/dev-server": "npm:best-shot-dev-server",
    "@best-shot/preset-babel": "^0.1.0",
    "@best-shot/preset-react": "^0.1.2",
    "@best-shot/preset-style": "^0.1.0",
    "@best-shot/preset-web": "^0.1.0",
    "babel-plugin-import": "^1.13.0",
    "nodemon": "^2.0.1",
    "webpack": "^4.41.2"
  },
  "optionalDependencies": {
    "ava": "^2.4.0",
    "eslint": "^6.7.2",
    "husky": "^3.1.0",
    "prettier": "^1.19.1",
    "stylelint": "^12.0.0"
  },
  "engines": {
    "node": "^8.10 || ^10 || ^12"
  },
  "eslintConfig": {
    "extends": [
      "@nice-move/eslint-config-base",
      "plugin:node/recommended"
    ],
    "env": {
      "node": true
    },
    "rules": {
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "nice-move && ava --verbose"
    }
  },
  "prettier": "@nice-move/prettier-config",
  "stylelint": {
    "extends": "@nice-move/stylelint-config"
  }
}

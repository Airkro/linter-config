{
  "private": true,
  "name": "nice-move",
  "version": "0.0.0",
  "description": "Eslint/Stylelint/Prettier config for personal use",
  "license": "UNLICENSED",
  "files": [],
  "scripts": {
    "format": "nice-move",
    "inspect": "nodemon ./config/inspect",
    "postinstall": "node ./config/hot-fix.js",
    "test": "ava --verbose"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "fs-chain": "^0.0.2",
    "nodemon": "^2.0.2",
    "sortobject": "^3.0.0",
    "write-json-file": "^4.2.1"
  },
  "optionalDependencies": {
    "ava": "^2.4.0",
    "eslint": "^6.8.0",
    "husky": "^3.1.0",
    "prettier": "^1.19.1",
    "stylelint": "^12.0.0"
  },
  "engines": {
    "node": "^10.15 || ^12"
  },
  "eslintConfig": {
    "extends": "@nice-move/eslint-config-base"
  },
  "husky": {
    "hooks": {
      "pre-commit": "nice-move && ava"
    }
  },
  "prettier": "@nice-move/prettier-config",
  "stylelint": {
    "extends": "@nice-move/stylelint-config"
  }
}

{
  "private": true,
  "name": "nice-move",
  "version": "0.0.0",
  "description": "Eslint/Stylelint/Prettier config for personal use",
  "license": "UNLICENSED",
  "files": [],
  "scripts": {
    "format": "lint-staged",
    "inspect": "best-shot inspect",
    "start": "nodemon --config .best-shot/nodemon.json",
    "test": "ava --verbose"
  },
  "workspaces": [
    "packages/*",
    "loader"
  ],
  "dependencies": {
    "core-js": "~3.2.0",
    "react": "~16.9.0",
    "react-diff-viewer": "~2.0.1",
    "react-dom": "~16.9.0",
    "react-hot-loader": "~4.12.11",
    "react-router": "~5.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@best-shot/cli": "^0.0.16",
    "@best-shot/inspector": "^0.0.4",
    "@best-shot/preset-babel": "^0.0.14",
    "@best-shot/preset-react": "^0.0.8",
    "@best-shot/preset-style": "^0.0.13",
    "@best-shot/preset-web": "^0.0.20",
    "autoprefixer": "^9.6.1",
    "babel-plugin-import": "^1.12.0",
    "best-shot-dev-server": "~0.0.32",
    "nodemon": "^1.19.1",
    "webpack": "^4.39.1"
  },
  "optionalDependencies": {
    "ava": "^2.2.0",
    "eslint": "^6.1.0",
    "husky": "^3.0.3",
    "prettier": "^1.18.2",
    "stylelint": "^10.1.0"
  },
  "engines": {
    "node": "^10.16 || ^12"
  },
  "eslintConfig": {
    "extends": [
      "@nice-move/eslint-config-base",
      "plugin:node/recommended"
    ],
    "rules": {
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && ava --verbose"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{css,scss}": [
      "prettier --write",
      "stylelint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "prettier": "@nice-move/prettier-config",
  "stylelint": {
    "extends": "@nice-move/stylelint-config"
  }
}

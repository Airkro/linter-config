{
  "private": true,
  "name": "nice-move",
  "version": "0.0.0",
  "description": "Eslint/Stylelint/Prettier config for personal use",
  "license": "MIT",
  "author": {
    "name": "Eric Chen",
    "email": "airkro@qq.com"
  },
  "homepage": "https://github.com/airkro/nice-move",
  "repository": {
    "type": "git",
    "url": "https://github.com/airkro/nice-move.git"
  },
  "bugs": {
    "url": "https://github.com/airkro/nice-move/issues"
  },
  "scripts": {
    "format": "nice-move lint",
    "inspect": "nodemon",
    "test": "ava --verbose"
  },
  "workspaces": [
    "packages/*",
    "tools/*"
  ],
  "devDependencies": {
    "@old-version/eslint-6": "npm:eslint@6.8.0",
    "ava": "^3.14.0",
    "commitlint": "^11.0.0",
    "eslint": "^7.15.0",
    "husky": "^4.3.6",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "stylelint": "^13.8.0"
  },
  "peerDependencies": {
    "@nice-move/eslint-inspector": "0.0.0"
  },
  "engines": {
    "node": "^12.14 || ^14"
  },
  "commitlint": {
    "extends": "@nice-move/commitlint-config"
  },
  "eslintConfig": {
    "extends": "@nice-move/eslint-config-base"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "nice-move lint && ava --verbose"
    }
  },
  "nodemonConfig": {
    "watch": [
      "./packages/*",
      "./config/*",
      "./tools/*"
    ],
    "exec": "eslint-inspect",
    "delay": 5
  },
  "prettier": "@nice-move/prettier-config",
  "stylelint": {
    "extends": "@nice-move/stylelint-config"
  }
}
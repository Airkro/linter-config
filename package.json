{
  "private": true,
  "name": "nice-move",
  "version": "0.0.0",
  "description": "Frontend develop helper for personal use",
  "license": "MIT",
  "author": {
    "name": "Eric Chen",
    "email": "airkro@qq.com"
  },
  "homepage": "https://github.com/airkro/nice-move",
  "repository": {
    "type": "git",
    "url": "https://github.com/airkro/nice-move.git"
  },
  "bugs": {
    "url": "https://github.com/airkro/nice-move/issues"
  },
  "scripts": {
    "inspect": "nodemon",
    "lint": "nice-move lint",
    "test": "ava --verbose"
  },
  "workspaces": [
    "packages/*",
    "tools/*"
  ],
  "devDependencies": {
    "ava": "^3.15.0",
    "commitlint": "^12.0.1",
    "eslint": "^7.21.0",
    "eslint-plugin-ava": "^11.0.0",
    "garou": "^0.1.19",
    "husky": "^4.3.8",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "stylelint": "^13.11.0",
    "svgo": "^2.2.2",
    "svgo-config": "^0.2.2"
  },
  "engines": {
    "node": "^12.18 || ^14"
  },
  "commitlint": {
    "extends": "@nice-move/commitlint-config"
  },
  "eslintConfig": {
    "extends": "@nice-move/eslint-config-base",
    "settings": {
      "import/internal-regex": [
        "^@nice-move/inspector$"
      ]
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "nice-move lint && ava --fail-fast"
    }
  },
  "nodemonConfig": {
    "watch": [
      "./packages/**/*",
      "./tools/**/*"
    ],
    "ext": "js,cjs,mjs,json",
    "exec": "inspect",
    "delay": 5
  },
  "prettier": "@nice-move/prettier-config",
  "stylelint": {
    "extends": "@nice-move/stylelint-config"
  }
}
{
  "private": true,
  "name": "nice-move",
  "version": "0.0.0",
  "description": "Eslint/Stylelint/Prettier config for personal use",
  "license": "UNLICENSED",
  "files": [],
  "scripts": {
    "format": "nice-move",
    "inspect": "best-shot inspect",
    "start": "nodemon --config .best-shot/nodemon.json",
    "test": "ava --verbose"
  },
  "workspaces": [
    "packages/*",
    "loader"
  ],
  "dependencies": {
    "core-js": "~3.2.1",
    "react": "~16.9.0",
    "react-diff-viewer": "~2.0.1",
    "react-dom": "~16.9.0",
    "react-hot-loader": "~4.12.13",
    "react-router": "~5.0.1",
    "react-select": "~3.0.4"
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@best-shot/cli": "^0.0.17",
    "@best-shot/dev-server": "npm:best-shot-dev-server",
    "@best-shot/preset-babel": "^0.0.15",
    "@best-shot/preset-react": "^0.0.10",
    "@best-shot/preset-style": "^0.0.15",
    "@best-shot/preset-web": "^0.0.21",
    "babel-plugin-import": "^1.12.1",
    "nodemon": "^1.19.2",
    "webpack": "^4.40.2"
  },
  "optionalDependencies": {
    "ava": "^2.3.0",
    "eslint": "^6.4.0",
    "husky": "^3.0.5",
    "prettier": "^1.18.2",
    "stylelint": "^10.1.0"
  },
  "engines": {
    "node": "^8.10 || ^10 || ^12"
  },
  "eslintConfig": {
    "extends": [
      "@nice-move/eslint-config-base",
      "plugin:node/recommended"
    ],
    "env": {
      "node": true
    },
    "rules": {
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "nice-move && ava --verbose"
    }
  },
  "prettier": "@nice-move/prettier-config",
  "stylelint": {
    "extends": "@nice-move/stylelint-config/scss"
  }
}

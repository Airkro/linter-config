{
  "*.vue": [
    "prettier --write",
    "eslint --fix",
    "stylelint --fix --rd",
    "git add"
  ],
  "*.{js,jsx,mjs,cjs}": [
    "prettier --write",
    "eslint --fix",
    "git add"
  ],
  "*.{css,scss,less,md,html}": [
    "prettier --write",
    "stylelint --fix --rd",
    "git add"
  ],
  "*.tpl": [
    "prettier --write",
    "stylelint --fix --rd -s html",
    "git add"
  ],
  "*.{svg,json,toml,yml,yaml}": [
    "prettier --write",
    "git add"
  ]
}
